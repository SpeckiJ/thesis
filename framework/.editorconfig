# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{groovy,java,kt,xml}]
indent_style = space
indent_size = 4
continuation_indent_size = 8
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 120
